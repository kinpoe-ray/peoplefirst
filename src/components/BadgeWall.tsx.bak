import React, { useState, useEffect } from 'react';
import { Badge, UserBadge } from '@/types';
import { BadgeService } from '@/services/badgeService';
import { useAuth } from '@/hooks/useAuth';
import { BadgeIcon, Crown, Star, Trophy, Award, Users, TrendingUp, Search, Filter } from 'lucide-react';

// 稀有度配置
const RARITY_CONFIG = {
  common: {
    color: 'text-gray-600',
    bgColor: 'bg-gray-100',
    borderColor: 'border-gray-300',
    icon: Star,
    label: '普通',
    glowColor: 'shadow-gray-200'
  },
  rare: {
    color: 'text-blue-600',
    bgColor: 'bg-blue-100',
    borderColor: 'border-blue-300',
    icon: Trophy,
    label: '稀有',
    glowColor: 'shadow-blue-200'
  },
  epic: {
    color: 'text-purple-600',
    bgColor: 'bg-purple-100',
    borderColor: 'border-purple-300',
    icon: Award,
    label: '史诗',
    glowColor: 'shadow-purple-200'
  },
  legendary: {
    color: 'text-yellow-600',
    bgColor: 'bg-yellow-100',
    borderColor: 'border-yellow-300',
    icon: Crown,
    label: '传奇',
    glowColor: 'shadow-yellow-200'
  }
};

// 类别配置
const CATEGORY_CONFIG = {
  learning: {
    icon: TrendingUp,
    label: '学习',
    color: 'text-green-600'
  },
  social: {
    icon: Users,
    label: '社交',
    color: 'text-blue-600'
  },
  achievement: {
    icon: Trophy,
    label: '成就',
    color: 'text-purple-600'
  },
  skill: {
    icon: TrendingUp,
    label: '技能',
    color: 'text-orange-600'
  },
  milestone: {
    icon: Crown,
    label: '里程碑',
    color: 'text-red-600'
  }
};

export default function BadgeWall() {
  const { user } = useAuth();
  const [allBadges, setAllBadges] = useState<Badge[]>([]);
  const [userBadges, setUserBadges] = useState<string[]>([]);
  const [loading, setLoading] = useState(true);
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCategory, setSelectedCategory] = useState<string>('all');
  const [selectedRarity, setSelectedRarity] = useState<string>('all');
  const [sortBy, setSortBy] = useState<'name' | 'rarity' | 'points' | 'category'>('rarity');

  useEffect(() => {
    loadBadgeWall();
  }, [user]);

  const loadBadgeWall = async () => {
    setLoading(true);
    try {
      const { badges, userBadges: earnedBadges } = await BadgeService.getBadgeWall(user?.id);
      setAllBadges(badges);
      setUserBadges(earnedBadges);
    } catch (error) {
      console.error('Error loading badge wall:', error);
    } finally {
      setLoading(false);
    }
  };

  const getRarityConfig = (rarity: string) => RARITY_CONFIG[rarity as keyof typeof RARITY_CONFIG];
  const getCategoryConfig = (category: string) => CATEGORY_CONFIG[category as keyof typeof CATEGORY_CONFIG];

  // 筛选和排序徽章
  const filteredAndSortedBadges = allBadges
    .filter(badge => {
      const matchesSearch = badge.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
                           badge.description.toLowerCase().includes(searchTerm.toLowerCase());
      const matchesCategory = selectedCategory === 'all' || badge.category === selectedCategory;
      const matchesRarity = selectedRarity === 'all' || badge.rarity === selectedRarity;
      return matchesSearch && matchesCategory && matchesRarity;
    })
    .sort((a, b) => {
      switch (sortBy) {
        case 'name':
          return a.name.localeCompare(b.name);
        case 'points':
          return b.points - a.points;
        case 'category':
          return a.category.localeCompare(b.category);
        case 'rarity':
          const rarityOrder = { legendary: 4, epic: 3, rare: 2, common: 1 };
          return rarityOrder[b.rarity as keyof typeof rarityOrder] - rarityOrder[a.rarity as keyof typeof rarityOrder];
        default:
          return 0;
      }
    });

  // 统计信息
  const totalBadges = allBadges.length;
  const earnedBadges = userBadges.length;
  const rarityStats = allBadges.reduce((acc, badge) => {
    acc[badge.rarity] = (acc[badge.rarity] || 0) + 1;
    return acc;
  }, {} as Record<string, number>);

  const categoryStats = allBadges.reduce((acc, badge) => {
    acc[badge.category] = (acc[badge.category] || 0) + 1;
    return acc;
  }, {} as Record<string, number>);

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
      {/* 头部 */}
      <div className="bg-white border-b border-gray-200 shadow-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-3xl font-bold text-gray-900 flex items-center gap-3">
                <BadgeIcon className="w-8 h-8 text-blue-600" />
                徽章墙
              </h1>
              <p className="text-gray-600 mt-2">
                探索所有徽章，了解学习成就系统
              </p>
            </div>
            {user && (
              <div className="text-right">
                <div className="text-sm text-gray-600">我的进度</div>
                <div className="text-2xl font-bold text-blue-600">
                  {earnedBadges}/{totalBadges}
                </div>
                <div className="text-sm text-gray-500">
                  {Math.round((earnedBadges / totalBadges) * 100)}% 完成
                </div>
              </div>
            )}
          </div>
        </div>
      </div>

      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* 统计概览 */}
        <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-8">
          {Object.entries(rarityStats).map(([rarity, count]) => {
            const config = getRarityConfig(rarity);
            const IconComponent = config.icon;
            return (
              <div key={rarity} className={`bg-white rounded-lg border-2 p-4 text-center shadow-lg ${config.borderColor} ${config.glowColor}`}>
                <IconComponent className={`w-8 h-8 ${config.color} mx-auto mb-2`} />
                <div className="text-2xl font-bold text-gray-900">{count}</div>
                <div className="text-sm text-gray-600">{config.label}</div>
              </div>
            );
          })}
        </div>

        {/* 筛选和搜索 */}
        <div className="bg-white rounded-lg shadow-sm border mb-8">
          <div className="p-6">
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
              {/* 搜索 */}
              <div className="relative">
                <Search className="absolute left-3 top-3 w-4 h-4 text-gray-400" />
                <input
                  type="text"
                  placeholder="搜索徽章..."
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                  className="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              {/* 类别筛选 */}
              <select
                value={selectedCategory}
                onChange={(e) => setSelectedCategory(e.target.value)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="all">所有类别</option>
                {Object.entries(CATEGORY_CONFIG).map(([key, config]) => (
                  <option key={key} value={key}>{config.label}</option>
                ))}
              </select>

              {/* 稀有度筛选 */}
              <select
                value={selectedRarity}
                onChange={(e) => setSelectedRarity(e.target.value)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="all">所有稀有度</option>
                {Object.entries(RARITY_CONFIG).map(([key, config]) => (
                  <option key={key} value={key}>{config.label}</option>
                ))}
              </select>

              {/* 排序 */}
              <select
                value={sortBy}
                onChange={(e) => setSortBy(e.target.value as any)}
                className="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="rarity">按稀有度排序</option>
                <option value="name">按名称排序</option>
                <option value="points">按积分排序</option>
                <option value="category">按类别排序</option>
              </select>
            </div>
          </div>
        </div>

        {/* 徽章网格 */}
        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {filteredAndSortedBadges.map((badge) => {
            const rarityConfig = getRarityConfig(badge.rarity);
            const categoryConfig = getCategoryConfig(badge.category);
            const IconComponent = rarityConfig.icon;
            const isEarned = userBadges.includes(badge.id);

            return (
              <div 
                key={badge.id} 
                className={`relative overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl bg-white rounded-lg ${
                  isEarned 
                    ? `border-2 ${rarityConfig.borderColor} shadow-lg ${rarityConfig.glowColor}` 
                    : 'border border-gray-200 bg-gray-50'
                } ${!isEarned ? 'opacity-75' : ''}`}
              >
                {isEarned && (
                  <div className="absolute top-2 right-2 z-10">
                    <div className="bg-green-500 text-white rounded-full p-1">
                      <Trophy className="w-3 h-3" />
                    </div>
                  </div>
                )}
                
                <div className="p-6 text-center">
                  {/* 徽章图标 */}
                  <div className={`relative mx-auto mb-4 w-16 h-16 rounded-full flex items-center justify-center ${
                    isEarned ? rarityConfig.bgColor : 'bg-gray-200'
                  }`}>
                    {badge.icon_url ? (
                      <img 
                        src={badge.icon_url} 
                        alt={badge.name}
                        className="w-10 h-10"
                      />
                    ) : (
                      <IconComponent className={`w-10 h-10 ${isEarned ? rarityConfig.color : 'text-gray-400'}`} />
                    )}
                    
                    {/* 稀有度指示器 */}
                    <div className={`absolute -top-1 -right-1 w-4 h-4 rounded-full border-2 border-white ${
                      rarityConfig.bgColor
                    }`}></div>
                  </div>

                  {/* 徽章信息 */}
                  <h3 className={`font-bold text-lg mb-2 ${isEarned ? 'text-gray-900' : 'text-gray-500'}`}>
                    {badge.name}
                  </h3>
                  
                  <p className={`text-sm mb-3 ${isEarned ? 'text-gray-600' : 'text-gray-400'}`}>
                    {badge.description}
                  </p>

                  {/* 徽章标签 */}
                  <div className="flex flex-wrap justify-center gap-2 mb-4">
                    <span className={`text-xs px-2 py-1 rounded-full ${
                      isEarned ? rarityConfig.bgColor : 'bg-gray-200'
                    } ${isEarned ? rarityConfig.color : 'text-gray-500'}`}>
                      {rarityConfig.label}
                    </span>
                    <span className={`text-xs px-2 py-1 rounded-full ${
                      isEarned ? 'bg-green-100' : 'bg-gray-200'
                    } ${isEarned ? 'text-green-600' : 'text-gray-500'}`}>
                      {categoryConfig.label}
                    </span>
                  </div>

                  {/* 积分 */}
                  <div className={`text-sm font-medium ${isEarned ? 'text-green-600' : 'text-gray-400'}`}>
                    {badge.points} 积分
                  </div>

                  {/* 获得状态 */}
                  {!user && (
                    <div className="mt-3 text-xs text-gray-500">
                      登录以追踪进度
                    </div>
                  )}
                  {user && !isEarned && (
                    <div className="mt-3 text-xs text-blue-600">
                      努力获得此徽章！
                    </div>
                  )}
                  {user && isEarned && (
                    <div className="mt-3 text-xs text-green-600 font-medium">
                      ✓ 已获得
                    </div>
                  )}
                </CardContent>
              </Card>
            );
          })}
        </div>

        {/* 无结果提示 */}
        {filteredAndSortedBadges.length === 0 && (
          <div className="text-center py-12">
            <BadgeIcon className="w-16 h-16 text-gray-400 mx-auto mb-4" />
            <h3 className="text-lg font-medium text-gray-900 mb-2">没有找到徽章</h3>
            <p className="text-gray-600">尝试调整搜索条件或筛选器</p>
          </div>
        )}

        {/* 徽章系统说明 */}
        <div className="bg-white rounded-lg shadow-sm border mt-12">
          <div className="p-6 border-b">
            <h3 className="text-lg font-semibold text-gray-900 flex items-center gap-2">
              <Award className="w-5 h-5" />
              徽章系统说明
            </h3>
          </div>
          <div className="p-6 space-y-4">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <h4 className="font-semibold text-gray-900 mb-2">稀有度等级</h4>
                <div className="space-y-2">
                  {Object.entries(RARITY_CONFIG).map(([key, config]) => {
                    const IconComponent = config.icon;
                    return (
                      <div key={key} className="flex items-center gap-3">
                        <IconComponent className={`w-4 h-4 ${config.color}`} />
                        <span className="text-sm text-gray-600">
                          {config.label} - 稀有度较高，奖励更丰厚
                        </span>
                      </div>
                    );
                  })}
                </div>
              </div>
              
              <div>
                <h4 className="font-semibold text-gray-900 mb-2">获得方式</h4>
                <div className="space-y-2 text-sm text-gray-600">
                  <div>• 完成课程学习获得学习徽章</div>
                  <div>• 掌握技能达到一定水平获得技能徽章</div>
                  <div>• 参与社区互动获得社交徽章</div>
                  <div>• 达成重要里程碑获得成就徽章</div>
                  <div>• 保持学习连续性获得坚持徽章</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}